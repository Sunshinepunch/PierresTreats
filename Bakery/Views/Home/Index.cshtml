@using Bakery.Models
@{
  Layout = "_Layout";
}


<h4><b>List of Flavors</b></h4>

<table>
    @foreach (Flavor flavor in ViewBag.Flavors)
    {
        <tr>
            <td>@Html.ActionLink($"{flavor.Name}", "Details", "Flavors", new { id = flavor.FlavorId })</td>
        </tr>
    }
</table>
<br>
<br>
<h4><b>List of Treats</b></h4>

<table>
    @foreach (Treat treat in ViewBag.Treats)
    {
        <tr>
            <td>@Html.ActionLink($"{treat.Name}", "Details", "Treats", new { id = treat.TreatId })</td>
        </tr>
    }
</table>
<br>
<br>

<h1>Welcome to Pierre's Sweet Treat Meet!</h1>
<p>@Html.ActionLink("See all treats", "Index", "Treats")</p> 
<p>@Html.ActionLink("See all flavors", "Index", "Flavors")</p>
<p>@Html.ActionLink("Create an account", "Index", "Account")</p>
<p>@Html.ActionLink("Logout", "Index", "Account")</p>
